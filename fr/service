apiVersion: v1
kind: Service
metadata:
  name: {{ template "echo.fullname" }}
  labels:
    app: {{ template "echo.name" . }}
    chart: {{ template "echo.chart" . }}
    release: {{ .Relase.Name }}
    heritage: {{ .Release.Service }}
spec:
  type: {{ .Values.service.type }}
  ports:
   - port: {{ .Values.service.externalPort }}
     targetPort: http
     protocol: TCP
     name: {{ .Values.service.name }}
  selector:
    app: {{ template "echo.name" . }}
    release: {{ .Release.Name }}  


